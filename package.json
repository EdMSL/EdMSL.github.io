{
  "name": "my-basic-boilerplate",
  "version": "1.0.0",
  "description": "My basic boilerplate",
  "main": "index.js",
  "author": "Eduard Trayt <eduard2011rus@gmail.com> (https://github.com/EdMSL)",
  "repository": {
    "type": "git",
    "url": "/"
  },
  "license": "ISC",
  "keywords": [],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not IE 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "stylelint": "stylelint src/styles/**/*.scss --config ./.stylelintrc.js --fix",
    "eslint": "eslint src/js/**/*.js",
    "start": "cross-env NODE_ENV=development webpack serve --mode development --config=./config/webpack.dev.config.js --progress",
    "build": "cross-env NODE_ENV=production webpack --env production --config=./config/webpack.build.config.js --progress --stats-error-details true",
    "publish": "node ./config/gh-pages.js",
    "test": "npm run stylelint && npm run eslint"
  },
  "devDependencies": {
    "autoprefixer": "10.2.4",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "7.0.0",
    "cross-env": "7.0.3",
    "css-loader": "5.0.2",
    "css-mqpacker": "7.0.0",
    "cssnano": "4.1.10",
    "eslint": "7.20.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.2.0",
    "mini-css-extract-plugin": "1.3.8",
    "node-sass": "5.0.0",
    "normalize-scss": "7.0.1",
    "postcss": "8.2.6",
    "postcss-loader": "5.0.0",
    "sass-loader": "11.0.1",
    "sass-resources-loader": "2.1.1",
    "source-map-loader": "2.0.1",
    "style-loader": "2.0.0",
    "stylelint": "13.11.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.19.0",
    "webpack": "^5.24.1",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "5.7.3"
  },
  "dependencies": {}
}
